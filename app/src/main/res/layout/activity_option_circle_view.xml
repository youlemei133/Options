<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <com.chiigu.testyaotia.options.OptionCircleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text="A"
            app:optionStatus="OPTION_BASE"
            />
        <com.chiigu.testyaotia.options.OptionCircleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text="B"
            app:optionStatus="OPTION_SELECTED"
            />
        <com.chiigu.testyaotia.options.OptionCircleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text="C"
            app:optionStatus="OPTION_RIGHT"
            />
        <com.chiigu.testyaotia.options.OptionCircleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text="D"
            app:optionStatus="OPTION_WRONG"
            app:rightOptionImageResource="@mipmap/icon_right"
            app:wrongOptionImageResource="@mipmap/icon_wrong"
            />
</LinearLayout>