<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MutiplyFormatLayoutActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <com.chiigu.testyaotia.multiformatviews.MutiplyFormatLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:id="@+id/mutiplyFormatLayout"
          app:mTextSize="16dp"
          app:mTextColor="#90EE90"
          app:textMultSpace="1.5"
          app:imageFailedView="@layout/item_failed"
          app:imageLoadingView="@layout/item_loading"
          app:imageScaleType="CENTER"
          app:imageMinHeight="100dp"
          />
   </ScrollView>
</RelativeLayout>
